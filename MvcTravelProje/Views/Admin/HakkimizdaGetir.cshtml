@model MvcTravelProje.Models.Siniflar.Hakkimizda

@{
    ViewBag.Title = "HakkimizdaGetir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("HakkimizdaGuncelle", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    <div style="margin-bottom:15px">
        @Html.Label("Foto URL")
        @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.Aciklama, 10, 1, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <button class="btn btn-primary">Güncelle</button>
    </div>
}
